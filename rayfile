pipeline {
    agent any

    tools {
        // Install the Maven version configured as "Maven" and add it to the path.
        maven "Maven"
    }

    stages {
        stage('Code Checkout') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/Raymond-Tanwie/maven-project-2.git'  

                // Run Maven on a Unix agent.
            //     sh "mvn -Dmaven.test.failure.ignore=true clean package"

                // To run Maven on a Windows agent, use
              //   bat "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        }
        
        stage('Code Scan'){
            steps {
              withSonarQubeEnv('sonar') {
            sh "mvn clean verify sonar:sonar -Dsonar.projectKey=devops"
              }
                
            }
        }
        
        stage('Build'){
          steps {
              sh "mvn package"
          }
        }

      
        
        stage ('Deploy to Tomee') {
           steps {
            script {
          deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://34.201.135.170:8888')], contextPath: '/primus-app', onFailure: false, war: 'webapp/target/*.war'
            }
           }
        }
    }
}
